datasource db {
	provider = "mysql"
	url = env("PRISMA_URL")
}

generator client {
	provider = "prisma-client-js"
}

model Leaderboard {
	id		Int		@id @default(autoincrement())
	map		String	@db.VarChar(100)
	player	String	@db.VarChar(36)
	name	String	@db.VarChar(36)
	mode	String	@db.VarChar(20)
	way		String	@db.VarChar(20)
	time	Int
	run		String	@db.VarChar(36)
	tas		Int		@default(0)
	@@map("leaderboards")
}

model PB {
	id		Int		@id @default(autoincrement())
	map		String	@db.VarChar(100)
	player	String	@db.VarChar(36)
	name	String	@db.VarChar(36)
	mode	String	@db.VarChar(20)
	way		String	@db.VarChar(20)
	time	Int
	run		String	@db.VarChar(36)
	@@map("pbs")
}
